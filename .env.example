# Convex Deployment URL
# Get this from your Convex dashboard or by running: npx convex dev
CONVEX_DEPLOYMENT_URL=https://your-convex-deployment.convex.cloud

# Organization Name
# This will be displayed in the frontend UI 
ORGANIZATION_NAME=IEEE

# Grace period for new device registration (in seconds)
# New devices that connect will have this amount of time to be registered with a name
# before being automatically deleted
GRACE_PERIOD_SECONDS=300

# Presence TTL in seconds (how long a device is considered present after last seen)
PRESENT_TTL_SECONDS=120

# Scan duration (seconds) used to refresh RSSI for in-range detection
IN_RANGE_SCAN_SECONDS=5

# Disconnect after a successful auto-reconnect to free connection slots
DISCONNECT_AFTER_SUCCESS=true

# Disconnect connected devices after each cycle to avoid connection limits
DISCONNECT_CONNECTED_AFTER_CYCLE=true
