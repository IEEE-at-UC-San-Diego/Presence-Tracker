# Convex Deployment URL
# Get this from your Convex dashboard or by running: npx convex dev
CONVEX_DEPLOYMENT_URL=https://your-convex-deployment.convex.cloud

# Organization Name
# This will be displayed in the frontend UI 
ORGANIZATION_NAME=Your Organization Name

# Grace period for new device registration (in seconds)
# New devices that connect will have this amount of time to be registered with a name
# before being automatically deleted
GRACE_PERIOD_SECONDS=300

# Presence TTL in seconds (how long a device is considered present after last seen)
PRESENT_TTL_SECONDS=120

# Grace period for newly registered devices to enter polling cycle (seconds)
# Ensures first-time registered devices are immediately tracked for connect/disconnect
# This prevents newly registered devices from not being properly managed by polling
NEWLY_REGISTERED_GRACE_PERIOD=120

# Full probe: every interval, attempt connect+disconnect for each device
FULL_PROBE_ENABLED=true
FULL_PROBE_INTERVAL_SECONDS=60
FULL_PROBE_DISCONNECT_AFTER=true

# Only mark devices absent if any presence signal was detected in a cycle
REQUIRE_PRESENCE_SIGNAL_FOR_ABSENCE=true

# Scan duration (seconds) used to refresh RSSI for in-range detection
IN_RANGE_SCAN_SECONDS=5

# Disconnect after a successful auto-reconnect to free connection slots
DISCONNECT_AFTER_SUCCESS=true

# Disconnect connected devices after each cycle to avoid connection limits
DISCONNECT_CONNECTED_AFTER_CYCLE=true

# How long to wait for bluetoothctl connect attempts (seconds)
CONNECT_TIMEOUT_SECONDS=10

# Max reconnect attempts per cycle (0 = no limit)
MAX_RECONNECT_PER_CYCLE=4

# Probe paired devices when scan finds nothing in range
ALLOW_PAIRED_PROBE_ON_EMPTY_SCAN=true
